<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="@drawable/contacts_shape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:src="@drawable/profile_getcontactc">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint=" Dr.Avul pakirJainalubdin Abdul Kalam"
                    android:textColor="#32729A"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/logosquare"></ImageView>

                <TextView
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:text="indian aerospace"

                    android:textColor="#32729A"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="indian aerospace"
                    android:textColor="#000000"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"


        android:background="@drawable/contacts_shape1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_venue_contacts" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"


            android:src="@drawable/ic_call_contacts" />

        <ImageView
            android:id="@+id/im3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_mail_contacts" />

        <ImageView
            android:id="@+id/im4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"

            android:src="@drawable/ic_message_contacts" />

        <ImageView
            android:id="@+id/im5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"

            android:src="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/im6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"

            android:src="@drawable/ic_share_contacts" />


    </LinearLayout>

</LinearLayout>
</LinearLayout>