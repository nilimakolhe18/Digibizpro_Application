<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="57dp"
            android:layout_marginRight="79dp"

            android:fontFamily="sans-serif-medium"
            android:text="Welcome to Digibizpro"
            android:textColor="#285B7A"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Please enter your quick access pin"
            android:textColor="#32729A"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_1"
        android:layout_marginTop="35dp"
        android:background="@drawable/sign_in_shape1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginLeft="78dp"
                android:fontFamily="sans-serif-medium"
                android:text="USER ID"
                android:textColor="#ffffff"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/login_mpin_switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/login_mpin_switch"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="96dp"
                android:fontFamily="sans-serif-medium"
                android:text="MPIN"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtmpin_1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:hint="5"
                android:inputType="number"
                android:maxLength="1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtmpin_2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:hint="5"

                android:inputType="number"
                android:maxLength="1"
                android:padding="5dp"
                android:textAlignment="center"

                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtmpin_3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"

                android:background="@drawable/edittext_border"
                android:hint="5"
                android:inputType="number"
                android:maxLength="1"
                android:padding="5dp"

                android:textAlignment="center"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtmpin_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:hint="5"
                android:inputType="number"

                android:maxLength="1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000000" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="82dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="sans-serif"
                        android:text="Forgot MPIN?"
                        android:textColor="#ffffff"
                        android:textSize="16dp"></TextView>

                    <Button
                        android:id="@+id/txtclick_here"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#285B7A"
                        android:fontFamily="sans-serif-medium"
                        android:text="Click here"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#E53167"
                        android:textSize="19dp" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>