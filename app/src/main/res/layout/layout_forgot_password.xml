<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/toolbar_shape">


        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
           android:gravity="center"
            android:text="Forgot Password"

            android:textColor="#ffffff"
            android:textSize="20dp"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
       android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="4dp"
            android:text="Forgot Password "
            android:textColor="#285B7A"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="192dp"
            android:textSize="20dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="52dp"
            android:text="Enter your mobile number or Email and we will send you OTP to set new Password"
            android:textColor="#32729A"
            android:textSize="14dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
android:layout_marginLeft="30dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="40dp"
            android:text="Email Id/Mobile number"
            android:textColor="#000080"
            android:textSize="14dp"></TextView>

        <EditText
            android:id="@+id/edtforgot_Email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/emailborder"
            android:hint="applexinfotech@gmail.com"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="14dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="19dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_get_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_border_sign_up"
        android:padding="14dp"
        android:text="Get OTP"
        android:textColor="#ffffff" />
</RelativeLayout>

