<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#285B7A"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sign_in_shape">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome to Digibizpro"
            android:textColor="#285B7A"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Login in to your existant account of Digibizpro"
            android:textColor="#32729A"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="USER ID"
                android:textColor="#000000"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/login_user_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/login_user_switch"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="MPIN"
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtemailid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:background="@drawable/edittext_border"
            android:hint="Email Id/Mobile No."
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:drawableRight="@drawable/eye"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingLeft="20dp"
            android:paddingTop="11dp"
            android:layout_marginTop="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="19dp" />

        <Button
            android:id="@+id/txtsign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:text="SIGN IN"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/txtsign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Don't have an account?"
                android:textColor="#ffffff"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/txtsign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#E53167"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>